{
    "name": "abyssalarts/steam-api",
    "description": "A steam-api client for Laravel 4.",
    "license": "MIT",
    "authors": [
        {
            "name": "AbyssalArts",
            "email": "jon@abyssalarts.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.2.*",
        "laravel/framework": "4.2.*",
        "guzzle/guzzle": "3.9.2"
    },
    "require-dev": {
        "phpunit/phpunit": "4.4.*",
        "mockery/mockery": "0.9.*",
        "orchestra/testbench": "2.2.*",
        "squizlabs/php_codesniffer": "2.*"
    },    
    "autoload": {
        "classmap": [
            "src/models",
            "src/migrations",
            "src/controllers",
            "tests/TestCase.php"
        ],
        "psr-0": {
            "AbyssalArts\\SteamApi\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
